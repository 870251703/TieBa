<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:foreground="@drawable/fg_circle_card"
    android:orientation="vertical"
    app:cardPreventCornerOverlap="false"
    app:cardBackgroundColor="@color/material_white"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:padding="8dp"
             >

    <TextView
        android:id="@+id/tiezi_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        tools:text="余强"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/postInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:gravity="top"
            android:textColor="@color/defaultShowColor"
            android:textSize="12sp"
            android:text="2016-08-06 17:58:20"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tiezi_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle_cotent"
        android:textColor="@color/defaultTextColor"
        android:textSize="14sp"
        tools:text="一级项目GGGG，一级项目GGGG一级项目GGGG一级项目GGGG一级项目GGGG一级项目GGGG一级项目GGGG一级项目GGGG"/>

    <View
        android:id="@+id/horDivLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/defaultShowColor"/>

    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:gravity="center">



        <TextView
            android:id="@+id/zanTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="赞"
            android:textColor="@color/defaultShowColor"
            android:textSize="14sp"/>


        <View
            android:id="@+id/verDivLine"
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:paddingTop="30dp"
            android:background="@color/defaultShowColor"/>

        <TextView
            android:id="@+id/commentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="回复"
            android:textColor="@color/defaultShowColor"
            android:textSize="14sp"/>



  </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>
